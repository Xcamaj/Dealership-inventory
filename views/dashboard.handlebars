<section>
  <h2>Post new car</h2>

  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>

{{#if posts.length}}
<section>
  <h2>Your New Cars</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> newcars-info post}}
    </li>
    {{/each}}
  </ol>
  </section>
  <section>
<h2>Your Used Cars</h2>
    <ol>
    {{#each posts as |post|}}
    <li>
      {{> usedcars-info post}}
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/js/addCar.js"></script>